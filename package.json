{
  "name": "chrome-extension-boilerplate",
  "version": "1.0.0",
  "description": "Minimal boilerplate code to start your chrome extension",
  "keywords": [
    "chrome extension boilerplate"
  ],
  "license": "MIT",
  "author": "@thevarunraja",
  "scripts": {
    "build": "npm run clean && npm run build:code && npm run copy:static",
    "build:code": "parcel build --no-source-maps src/background/background.ts src/popup/index.html src/content/contentScript.ts src/styles/index.css",
    "clean": "rm -rf dist",
    "copy:static": "copy-and-watch src/threadResponse.js src/manifest.json src/icons/*.png dist",
    "dev": "set NODE_ENV=development && npm run watch:all",
    "prepare": "husky install",
    "watch:all": "concurrently \"npm run watch:code\" \"npm run watch:static\"",
    "watch:code": "parcel watch src/content/contentScript.ts src/popup/index.html src/background/background.ts src/styles/index.css",
    "watch:static": "copy-and-watch --watch src/manifest.json src/icons/*.png dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "organize-imports-cli",
      "prettier --write",
      "eslint --quiet --fix"
    ]
  },
  "devDependencies": {
    "@types/chrome": "^0.0.177",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "copy-and-watch": "^0.1.6",
    "eslint": "^8.8.0",
    "husky": "^7.0.4",
    "parcel": "^2.1.1",
    "postcss": "^8.4.6",
    "postcss-custom-properties": "^12.0.4",
    "postcss-nested": "^5.0.6",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.5",
    "tailwindcss": "^3.0.18",
    "typescript": "^4.5.4"
  }
}
