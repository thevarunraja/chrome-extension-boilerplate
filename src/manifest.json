{
  "name": "awesome-extenstion",
  "description": "description of your awesome extension",
  "version": "0.1",
  "manifest_version": 3,
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "/background/background.js"
  },
  "action": {
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/content/contentscript.js"],
      "css": ["/styles/index.css"],
      "run_at": "document_start"
    }
  ]
}
